<SEGs>

  <!-- Kundennachricht -->
  <SEGdef id="VpaRequest" code="HKVPA" version="1" delimiter="+" terminator="'">
    <GROUP name="head"             type="SegHead"   />
    <ELEM  name="vopId"            type="bin"       minnum="1" />

    <VALUES>
      <VALUE path="head/code">%code</VALUE>
      <VALUE path="head/version">%version</VALUE>
    </VALUES>
  </SEGdef>



  <SEGdef code="HIVPAS" version="1" delimiter="+" terminator="'" isbpdjob="1">
    <GROUP name="head"                             type="SegHead"  />
    <ELEM  name="jobspermsg"                       type="num"   maxsize="3" />
    <ELEM  name="minsigs"                          type="num"   maxsize="1" />
    <ELEM  name="securityClass"                    type="num"   size="1" />

    <VALUES>
      <VALUE path="head/code">%code</VALUE>
      <VALUE path="head/version">%version</VALUE>
    </VALUES>
  </SEGdef>


</SEGs>



<JOBs>

  <JOBdef id="JobVpa"
          code="HKVPA"
          params="HIVPPS"
          version="1"
          crypt="1"
          sign="1"
          needBPD="1"
  >
    <SEG type="VpaRequest" version="1" />

    <VALUES>
      <VALUE path="head/code">%code</VALUE>
      <VALUE path="head/version">%version</VALUE>
    </VALUES>
  </JOBdef>



</JOBs>




