<SEGs>

 <SEGdef id="sync" 
         code="HKSYN" 
         version="3"
         delimiter="+" 
         terminator="'"
 >
   <GROUP type="SegHead" name="head" />
   <ELEM name="mode" type="num" maxsize="1" />
   <VALUES>
     <VALUE path="head/code">%code</VALUE>
     <VALUE path="head/version">%version</VALUE>
   </VALUES>
 </SEGdef>



 <SEGdef id="syncresponse" 
         code="HISYN" 
         version="3"
         delimiter="+" 
         terminator="'"
 >
   <GROUP type="SegHead" name="head" />
   <ELEM name="systemid" type="ascii" minnum="0" hide="1" trustlevel="3"/>
   <ELEM name="msgnum" type="num" minnum="0" maxsize="4" />
   <ELEM name="signum" type="num" minnum="0" maxsize="16" />
   <VALUES>
     <VALUE path="head/code">%code</VALUE>
     <VALUE path="head/version">%version</VALUE>
   </VALUES>
 </SEGdef>



 <SEGdef id="syncresponse" 
         code="HISYN" 
         version="4"
         delimiter="+" 
         terminator="'"
 >
   <GROUP type="SegHead" name="head" />
   <ELEM name="systemid" type="ascii" minnum="0" hide="1" trustlevel="3"/>
   <ELEM name="msgnum" type="num" minnum="0" maxsize="4" />
   <ELEM name="signum" type="num" minnum="0" maxsize="16" />
   <ELEM name="authnum" type="num" minnum="0" maxsize="16" />
   <VALUES>
     <VALUE path="head/code">%code</VALUE>
     <VALUE path="head/version">%version</VALUE>
   </VALUES>
 </SEGdef>


</SEGs>



<JOBs>

  <JOBdef id="JobSync" 
          version="1" 
          crypt="1" 
          sign="1" 
          dlg="1" 
          needsbpd="0" 
          nosysid="1"
          noitan="0"
          response="syncresponse"
   >
    <SEG type="Ident"   name="ident" />
    <SEG type="Prepare" name="prepare" version="3" />
    <SEG type="Sync"    name="sync" />

    <VALUES>
      <VALUE path="ident/systemId">0</VALUE>
    </VALUES>
 
  </JOBdef>



</JOBs>

