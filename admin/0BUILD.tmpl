<?xml?>

<gwbuild>

  <target type="ConvenienceLibrary" name="somelib" >

    <!-- includes for C code -->
    <includes type="c" >
      $(gmp_cflags)
      $(gwenhywfar_cflags)
      -I$(topsrcdir)/src/libs
      -I$(topbuilddir)/src/libs
      -I$(topbuilddir)
      -I$(topsrcdir)
    </includes>

    <!-- includes for C++ code -->
    <includes type="cxx" >
      $(gmp_cflags)
      $(gwenhywfar_cflags)
      -I$(topsrcdir)/src/libs
      -I$(topbuilddir)/src/libs
      -I$(topbuilddir)
      -I$(topsrcdir)
    </includes>
  
    <includes type="tm2" >
      --include=$(topsrcdir)/src/libs/aqbanking/typemaker2/c
      --include=$(builddir)
      --include=$(srcdir)
    </includes>

  
    <define name="BUILDING_AQBANKING" />


    <!-- CFLAGS and CXXFLAGS to use in this folder -->
    <setVar name="local/cflags">$(visibility_cflags)</setVar>
    <setVar name="local/cxxflags">$(visibility_cflags)</setVar>


    <!-- args to use with typemaker2 in this folder -->
    <setVar name="tm2flags" >
      --api=AQBANKING_API
    </setVar>


    <!-- list of typemaker2 files -->
    <setVar name="local/typefiles" >
    </setVar>
  

    <!-- list of source files generated by typemaker2 -->
    <setVar name="local/built_sources" >
    </setVar>
  

    <!-- list of public header files generated by typemaker2 -->
    <setVar name="local/built_headers_pub">
    </setVar>
  
  
    <!-- list of private header files generated by typemaker2 -->
    <setVar name="local/built_headers_priv" >
    </setVar>


    <!-- list of private header files (not generated by typemaker2 or others) -->
    <setVar name="local/headers_priv" >
    </setVar>


    <!-- list of public header files (not generated by typemaker2 or others) -->
    <setVar name="local/headers_pub" >
    </setVar>


    <!-- list of source files (not generated by typemaker2 or others) -->
    <setVar name="local/sources" >
    </setVar>

    <!-- typemaker2 data to be used by other projects  -->
    <data install="$(pkgdatadir)/typemaker2/c" DIST="FALSE" generated="TRUE" >
    </data>

    <!-- list of non-source files or included source files which are not automatically distributed -->
    <extradist>
    </extradist>


    <!-- list of targets in this project to use with this specific target here -->
    <useTargets>
    </useTargets>






    <!-- changes below probably not needed except <subdirs> -->



    <!-- install but don't distribute -->
    <headers dist="false" install="$(pkgincludedir)/types" >
      $(local/built_headers_pub)
    </headers>


    <!-- don't install, don't distribute -->
    <headers dist="false" >
      $(local/built_headers_priv)
    </headers>


    <!--install and distribute -->
    <headers dist="true" install="$(pkgincludedir)/types" >
      $(local/headers_pub)
    </headers>


    <!-- don't install but distribute -->
    <headers dist="true" >
      $(local/headers_priv)
    </headers>


    <sources>
      $(local/typefiles)
      $(local/sources)
    </sources>



    <subdirs>
    </subdirs>

  </target>

</gwbuild>
